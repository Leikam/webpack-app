$wrapper_padding = 12px;

$form_minWidth = 240px;
$form_minHeight = 250px;
$form_maxWidth = 400px;

/* вычисляем соотношение на основе формы – в такой формуле в режиме максимального экрана 2 объекта - форма и промо будут равны*/
$aspect = percentage($form_minHeight/$form_maxWidth);

$promo_minWidth = 400px;
$promo_maxWidth = 600px;

body:before,
body:after {
	content: '';
	position: fixed;
	top: 0;
	outline: 1px solid red;
	z-index: 0;
	pointer-events: none;
}
body:before {
	width: 50%;
	height: 100%;
}
body:after {
	width: 100%;
	height: 50%;
}

.wrapper {
	display: flex;
	flex-wrap: wrap;
	justify-content center;
	align-items: center;
	align-content: center;
	justify-items: center;
	height: 100vh;
	padding: $wrapper_padding;
	box-sizing: border-box;
}

.form {
	min-height: ($form_minHeight)px;
	min-width: ($form_minWidth)px;
	max-width: $form_maxWidth;
	flex: 1 1 auto;

	/* не важно: для контента внутри */
	display: flex;
	flex-direction: column;
	justify-items: center;
	align-items: center;
	justify-content: center;
	padding: 8px;
	box-sizing: border-box;
	background: lightgoldenrodyellow;
	/* / */
}

.promo {
	flex: 1.2 1 auto;

	display: flex;
	align-items: center;
	/* что бы наложить 2 ограничения, например max-width: 40% и max-width: 500px - надо сделать обертку */
	min-width: $promo_minWidth;
	max-width: $promo_maxWidth;
	background: #e7e7e7;
}

	.promo_image {
		width: 100%;
		padding-bottom: $aspect;
		background-image: url('/src/res/img/nolan.png');
		background-position: 0 50%;
		background-size: contain;
		background-repeat: no-repeat;
		background-color: rgba(255, 182, 193, 0.52);
	}

@media (max-width: 299px) {
	.promo {
		display: none;
	}
}

@media (max-width: $promo_minWidth + $wrapper_padding * 2 - 1) {
	.promo {
		min-width: 100%;
	}
}

@media (max-width: $promo_minWidth + $form_minWidth + $wrapper_padding * 2 - 1) {
	.promo {
		max-width: $form_maxWidth;
	}
	.promo_image {
		background-position: 50% 50%;
	}
}

